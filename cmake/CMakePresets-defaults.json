{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default preset",
      "binaryDir": "cmake-build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        },
        "CMAKE_MESSAGE_CONTEXT_SHOW": {
          "type": "BOOL",
          "value": true
        }
      }
    },
    {
      "name": "_mpi",
      "hidden": true,
      "cacheVariables": {
        "WANNIER90_MPI": {
          "type": "BOOL",
          "value": true
        }
      }
    },
    {
      "name": "mpi",
      "displayName": "MPI preset",
      "binaryDir": "cmake-build-mpi",
      "inherits": [
        "_mpi",
        "default"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "displayName": "Default preset",
      "configurePreset": "default"
    },
    {
      "name": "mpi",
      "displayName": "MPI preset",
      "configurePreset": "mpi",
      "inherits": [
        "default"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "displayName": "Default preset",
      "configurePreset": "default"
    },
    {
      "name": "mpi",
      "displayName": "MPI preset",
      "configurePreset": "mpi",
      "inherits": [
        "default"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "displayName": "Default workflow",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    },
    {
      "name": "mpi",
      "displayName": "MPI workflow",
      "steps": [
        {
          "type": "configure",
          "name": "mpi"
        },
        {
          "type": "build",
          "name": "mpi"
        },
        {
          "type": "test",
          "name": "mpi"
        }
      ]
    }
  ]
}
